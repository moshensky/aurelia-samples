template
  nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
    div.navbar-header
      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
        span.sr-only Toggle Navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#")
        i.fa.fa-home
        | &nbsp;
        span ${router.title}

    div.collapse.navbar-collapse#bs-example-navbar-collapse-1
      ul.nav.navbar-nav
        li(repeat.for="row of router.navigation" class="${row.isActive ? 'active' : ''}")
          a(href.bind="row.href" show.bind="row.title === 'Login' ? !$parent.isUserLoggedIn : $parent.isUserLoggedIn") ${row.title}

      p.navbar-text.pull-right(if.bind="isUserLoggedIn")
        span ${userName}
        | &nbsp;
        a(href="#" title="Logout" click.delegate="logout()")
          i.fa.fa-arrow-circle-o-right.fa-lg
      ul.nav.navbar-nav.navbar-right
        li.loader(if.bind="router.isNavigating")
          i.fa.fa-spinner.fa-spin.fa-2x

